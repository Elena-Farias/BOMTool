<Bar Mode="BarMode.VerticalInline"
     CollapseMode="BarCollapseMode.Small"
     Breakpoint="Breakpoint.Desktop"
     NavigationBreakpoint="Breakpoint.Tablet"
     ThemeContrast="ThemeContrast.Light"
     Background="Background.Primary">
    <BarBrand>
        <BarItem>
            <BarLink To="">
                <BarIcon IconName="IconName.Home" />
                BOM TOOL
            </BarLink>
        </BarItem>
    </BarBrand>
    <BarMenu>
        <BarStart>
            <AuthorizeView Roles="BOMTool Administrator">
                <BarItem>
                    <BarDropdown>
                        <BarDropdownToggle>
                            <BarIcon IconName="IconName.Edit" />
                            Administration
                        </BarDropdownToggle>
                        <BarDropdownMenu>
                            <BarDropdownItem>
                                <BarLink To="Location">
                                    <BarIcon IconName="IconName.Store" />
                                    Location
                                </BarLink>
                            </BarDropdownItem>
                        </BarDropdownMenu>
                    </BarDropdown>
                </BarItem>
            </AuthorizeView>
            <AuthorizeView Roles="BOMTool User">
                <BarItem>
                    <BarLink To="PartNum">
                        <BarIcon IconName="IconName.Circle" />
                        BOM Tool
                    </BarLink>
                </BarItem>
            </AuthorizeView>
        </BarStart>
    </BarMenu>
</Bar>

@code {RenderFragment customIcon =@<img src="/brand-logo.png" style="width:100px; height: 42px" />;
}